<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eduatlas.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EduAtlas</name>
    <description>
       App For Institutes, Teachers and Students
    </description>
    <author email="contact@eduatlas.com" href="http://eduatlas.com">
        Eduatlas
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="2.0.3" />
    <plugin name="cordova-plugin-local-notification" spec="0.9.0-beta.2" />
    <plugin name="cordova-plugin-android-permissions" spec="1.1.0" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <platform name="android">
        <icon src="src/assets/img/EA FAVI.png" platform="android"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="src/assets/img/EA FAVI.png" platform="ios"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
